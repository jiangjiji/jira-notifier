{
    "manifest_version": 3,
    "name": "JIRA 通知小工具",
    "version": "1.0",
    "author": "Jiangjiji",
    "action": {
        "default_icon": "assets/favicon.ico",
        "default_title": "JIRA 通知小工具",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "index.html",
    "permissions": [
        "activeTab",
        "cookies",
        "idle",
        "notifications"
    ]
}